<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_images4"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_twer1"
        app:layout_constraintRight_toLeftOf="@id/iv_images4"
        app:layout_constraintTop_toTopOf="@id/iv_images4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_twer2"
        app:layout_constraintBottom_toBottomOf="@id/iv_images4" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_twer2"
        android:background="#D6D1D1"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
